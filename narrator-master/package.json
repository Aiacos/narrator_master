{
  "name": "narrator-master",
  "version": "1.0.0",
  "description": "Foundry VTT module - AI assistant for Dungeon Masters with audio transcription, contextual suggestions, and image generation",
  "type": "module",
  "main": "scripts/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:custom": "node tests/run-tests.js",
    "lint": "eslint scripts/ tests/ --ext .js",
    "lint:fix": "eslint scripts/ tests/ --ext .js --fix",
    "format": "prettier --write \"scripts/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"scripts/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "syntax-check": "find scripts -name '*.js' -exec node --check {} \\;",
    "prepare": "echo 'Narrator Master module ready for Foundry VTT'"
  },
  "keywords": [
    "foundry-vtt",
    "foundry-vtt-module",
    "dungeon-master",
    "ai-assistant",
    "openai",
    "whisper",
    "transcription",
    "rpg",
    "tabletop"
  ],
  "author": "Narrator Master Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/narrator-master/narrator-master.git"
  },
  "bugs": {
    "url": "https://github.com/narrator-master/narrator-master/issues"
  },
  "homepage": "https://github.com/narrator-master/narrator-master#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.mjs"
    ],
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFilesAfterEnv": [
      "./tests/test-helper.js"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/main.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "testTimeout": 10000,
    "globals": {
      "game": {},
      "ui": {},
      "Hooks": {},
      "Application": {},
      "FormApplication": {},
      "foundry": {}
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "game": "readonly",
      "ui": "readonly",
      "Hooks": "readonly",
      "Application": "readonly",
      "FormApplication": "readonly",
      "foundry": "readonly",
      "CONFIG": "readonly",
      "canvas": "readonly",
      "Dialog": "readonly",
      "FilePicker": "readonly",
      "loadTemplates": "readonly",
      "mergeObject": "readonly",
      "ImagePopout": "readonly"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "prefer-const": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "no-var": "error",
      "eqeqeq": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "all"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
