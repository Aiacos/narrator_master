{
    "root": true,
    "env": {
        "browser": true,
        "es2022": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "eslint-config-prettier"
    ],
    "plugins": [
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "globals": {
        "game": "readonly",
        "ui": "readonly",
        "Hooks": "readonly",
        "Application": "readonly",
        "FormApplication": "readonly",
        "foundry": "readonly",
        "CONFIG": "readonly",
        "canvas": "readonly",
        "Dialog": "readonly",
        "FilePicker": "readonly",
        "loadTemplates": "readonly",
        "mergeObject": "readonly",
        "ImagePopout": "readonly"
    },
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "prefer-const": "error",
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ]
            }
        ],
        "no-var": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ]
    }
}
