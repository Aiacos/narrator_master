{{!-- Narrator Master - DM Panel Template --}}
{{!-- Interactive narrative assistant panel --}}

<div class="narrator-panel-container" data-module-id="{{moduleId}}">
    {{!-- Configuration Warning --}}
    {{#unless apiKeyConfigured}}
    <div class="narrator-config-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <span>{{i18n.noApiKey}}</span>
        <button type="button" class="open-settings">
            <i class="fas fa-cog"></i>
            {{i18n.configureSettings}}
        </button>
    </div>
    {{/unless}}

    {{!-- Loading Overlay --}}
    {{#if isLoading}}
    <div class="narrator-loading-overlay">
        <i class="fas fa-spinner fa-spin"></i>
        <span>{{loadingMessage}}</span>
    </div>
    {{/if}}

    {{!-- Recording Controls - Compact Toggle --}}
    <section class="narrator-recording-section">
        <div class="recording-controls">
            {{#if isInactive}}
            <button type="button" class="start-recording {{#unless apiKeyConfigured}}disabled{{/unless}}"
                    {{#unless apiKeyConfigured}}disabled{{/unless}}
                    title="{{i18n.startRecording}}">
                <i class="fas fa-microphone"></i>
                {{i18n.startRecording}}
            </button>
            {{/if}}

            {{#if isRecording}}
            <button type="button" class="pause-recording" title="{{i18n.pauseRecording}}">
                <i class="fas fa-pause"></i>
                {{i18n.pauseRecording}}
            </button>
            <button type="button" class="stop-recording" title="{{i18n.stopRecording}}">
                <i class="fas fa-stop"></i>
                {{i18n.stopRecording}}
            </button>
            {{/if}}

            {{#if isPaused}}
            <button type="button" class="resume-recording" title="{{i18n.resumeRecording}}">
                <i class="fas fa-play"></i>
                {{i18n.resumeRecording}}
            </button>
            <button type="button" class="stop-recording" title="{{i18n.stopRecording}}">
                <i class="fas fa-stop"></i>
                {{i18n.stopRecording}}
            </button>
            {{/if}}

            {{#if isProcessing}}
            <div class="processing-indicator">
                <i class="fas fa-spinner fa-spin"></i>
                <span>{{i18n.processing}}</span>
            </div>
            {{/if}}
        </div>

        {{!-- Recording Status --}}
        {{#unless isInactive}}
        <div class="recording-status">
            <span class="recording-indicator {{#if isRecording}}active{{/if}} {{#if isPaused}}paused{{/if}}">
                <i class="fas fa-circle"></i>
            </span>
            <span class="recording-duration">{{recordingDuration}}</span>
            {{#if isRecording}}
            <span class="listening-label">{{i18n.listeningStatus}}</span>
            {{/if}}
        </div>

        {{!-- Audio Level Indicator --}}
        <div class="audio-level-container">
            <div class="audio-level-bar" style="width: {{audioLevel}}%"></div>
        </div>
        {{/unless}}
    </section>

    {{!-- Journal Status --}}
    <div class="narrator-journal-status">
        <i class="fas fa-book"></i>
        <span>{{journalStatusText}}</span>
    </div>

    {{!-- Tab Navigation --}}
    <nav class="tabs" data-group="primary" role="tablist">
        <a class="item" data-tab="assistant" id="tab-assistant" role="tab" aria-selected="true" aria-controls="panel-assistant">
            <i class="fas fa-lightbulb"></i>
            {{i18n.assistantTab}}
            {{#if offTrack}}
            <span class="off-track-badge" title="{{i18n.offTrackWarning}}">!</span>
            {{/if}}
        </a>
        <a class="item" data-tab="images" id="tab-images" role="tab" aria-selected="false" aria-controls="panel-images">
            <i class="fas fa-images"></i>
            {{i18n.imagesTab}}
            {{#if hasImages}}
            <span class="count-badge">{{generatedImages.length}}</span>
            {{/if}}
        </a>
        <a class="item" data-tab="transcript" id="tab-transcript" role="tab" aria-selected="false" aria-controls="panel-transcript">
            <i class="fas fa-file-text"></i>
            {{i18n.transcriptTab}}
        </a>
    </nav>

    {{!-- Tab Content --}}
    <section class="tab-content">
        {{!-- Assistant Tab --}}
        <div class="tab" data-tab="assistant" data-group="primary" id="panel-assistant" role="tabpanel" aria-labelledby="tab-assistant">
            <div class="suggestions-header">
                <h3>{{i18n.assistantTab}}</h3>
                <div class="suggestions-actions">
                    {{#if hasSuggestions}}
                    <button type="button" class="copy-suggestions" title="{{i18n.copyToClipboard}}">
                        <i class="fas fa-copy"></i>
                    </button>
                    {{/if}}
                </div>
            </div>

            {{!-- Off-Track Warning --}}
            {{#if offTrack}}
            <div class="off-track-warning">
                <div class="off-track-header">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>{{i18n.offTrackWarning}}</span>
                </div>
                {{#if offTrackMessage}}
                <p class="off-track-message">{{offTrackMessage}}</p>
                {{/if}}

                {{!-- Narrative Bridge --}}
                {{#if hasNarrativeBridge}}
                <div class="narrative-bridge">
                    <h4>{{i18n.returnToStory}}</h4>
                    <div class="narrative-bridge-content">
                        {{narrativeBridge}}
                    </div>
                    <button type="button" class="copy-bridge" title="{{i18n.copyToClipboard}}">
                        <i class="fas fa-copy"></i>
                        {{i18n.copyToClipboard}}
                    </button>
                </div>
                {{/if}}
            </div>
            {{/if}}

            <div class="suggestions-content">
                {{#if hasSuggestions}}
                <ul class="suggestions-list">
                    {{#each suggestions}}
                    <li class="suggestion-item">
                        <i class="fas fa-comment-dots"></i>
                        <span>{{this}}</span>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <div class="empty-state">
                    <i class="fas fa-lightbulb"></i>
                    <p>{{i18n.noSuggestions}}</p>
                </div>
                {{/if}}
            </div>

            {{!-- NPC Dialogue Section --}}
            {{#if hasNPCDialogue}}
            <div class="npc-dialogue-section">
                <div class="npc-dialogue-header">
                    <h4>{{i18n.npcDialogueTitle}}</h4>
                </div>

                <div class="npc-dialogue-content">
                    {{#each npcDialogueList}}
                    <div class="npc-dialogue-group">
                        <div class="npc-name">
                            <i class="fas fa-user"></i>
                            <span>{{this.name}}</span>
                        </div>
                        <ul class="dialogue-options-list">
                            {{#each this.dialogues}}
                            <li class="dialogue-option-item">
                                <div class="dialogue-text">
                                    <i class="fas fa-quote-left"></i>
                                    <span>{{this}}</span>
                                </div>
                                <button type="button" class="copy-npc-dialogue" data-npc="{{../name}}" data-dialogue="{{this}}" title="{{../../i18n.copyDialogue}}">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}

            {{!-- Rules Q&A Section --}}
            {{#if hasRules}}
            <div class="rules-qa-section">
                <div class="rules-header">
                    <h4>{{i18n.rulesQuestions}}</h4>
                    <button type="button" class="clear-rules" title="{{i18n.clearAllRules}}">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="rules-content">
                    {{#each rulesAnswers}}
                    <div class="rule-item {{#if this.expanded}}expanded{{/if}}" data-index="{{@index}}">
                        <div class="rule-question">
                            <i class="fas fa-book-open"></i>
                            <span class="question-text">{{this.question}}</span>
                            <div class="rule-actions">
                                <button type="button" class="expand-rule" title="{{#if this.expanded}}{{../i18n.collapseAnswer}}{{else}}{{../i18n.expandAnswer}}{{/if}}">
                                    <i class="fas {{#if this.expanded}}fa-chevron-up{{else}}fa-chevron-down{{/if}}"></i>
                                </button>
                                <button type="button" class="dismiss-rule" title="{{../i18n.dismissRule}}">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        {{#if this.expanded}}
                        <div class="rule-answer">
                            <div class="answer-content">
                                {{this.answer}}
                            </div>

                            {{#if this.citation}}
                            <div class="rule-citation">
                                <i class="fas fa-bookmark"></i>
                                <span class="citation-text">{{this.citation}}</span>
                                {{#if this.source}}
                                <span class="citation-source">{{this.source}}</span>
                                {{/if}}
                            </div>
                            {{/if}}

                            <div class="answer-actions">
                                <button type="button" class="copy-rule-answer" title="{{../i18n.copyAnswer}}">
                                    <i class="fas fa-copy"></i>
                                    {{../i18n.copyAnswer}}
                                </button>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>

        {{!-- Images Tab --}}
        <div class="tab" data-tab="images" data-group="primary" id="panel-images" role="tabpanel" aria-labelledby="tab-images">
            <div class="images-header">
                <h3>{{i18n.imagesTab}}</h3>
                <div class="images-actions">
                    <button type="button" class="generate-image {{#unless apiKeyConfigured}}disabled{{/unless}}"
                            {{#unless apiKeyConfigured}}disabled{{/unless}}>
                        <i class="fas fa-magic"></i>
                        {{i18n.generateImage}}
                    </button>
                    {{#if hasImages}}
                    <button type="button" class="clear-images" title="{{i18n.clearImages}}">
                        <i class="fas fa-trash"></i>
                    </button>
                    {{/if}}
                </div>
            </div>

            <div class="images-content">
                {{#if hasImages}}
                <div class="images-gallery">
                    {{#each generatedImages}}
                    <div class="image-item" data-url="{{this.url}}" data-index="{{@index}}">
                        <img src="{{this.url}}" alt="{{this.prompt}}" loading="lazy" />
                        <div class="image-overlay">
                            {{#if this.prompt}}
                            <span class="image-prompt" title="{{this.prompt}}">
                                {{this.prompt}}
                            </span>
                            {{/if}}
                            <button type="button" class="delete-image" data-index="{{@index}}" title="Delete">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="empty-state">
                    <i class="fas fa-image"></i>
                    <p>{{i18n.noImages}}</p>
                </div>
                {{/if}}
            </div>
        </div>

        {{!-- Transcript Tab --}}
        <div class="tab" data-tab="transcript" data-group="primary" id="panel-transcript" role="tabpanel" aria-labelledby="tab-transcript">
            <div class="transcript-header">
                <h3>{{i18n.transcriptTab}}</h3>
                <div class="transcript-actions">
                    <button type="button" class="mark-scene-break" title="{{i18n.markSceneBreak}}">
                        <i class="fas fa-flag"></i>
                        {{i18n.markSceneBreak}}
                    </button>
                    {{#if hasTranscript}}
                    <button type="button" class="copy-transcript" title="{{i18n.copyToClipboard}}">
                        <i class="fas fa-copy"></i>
                    </button>
                    <button type="button" class="export-transcript" title="{{i18n.exportTranscript}}">
                        <i class="fas fa-download"></i>
                    </button>
                    <button type="button" class="clear-transcript" title="{{i18n.clearTranscript}}">
                        <i class="fas fa-trash"></i>
                    </button>
                    {{/if}}
                </div>
            </div>

            <div class="transcript-content">
                {{#if hasTranscript}}
                <div class="transcript-list">
                    {{#each transcriptWithScenes}}
                        {{#if (eq this.type "scene-break")}}
                        {{!-- Scene Break Separator --}}
                        <div class="scene-break" data-scene-type="{{this.sceneType}}" data-timestamp="{{this.timestamp}}">
                            <div class="scene-break-line"></div>
                            <div class="scene-break-content">
                                <span class="scene-type-badge scene-type-{{this.sceneType}}">
                                    {{#if (eq this.sceneType "exploration")}}
                                    <i class="fas fa-compass"></i>
                                    {{else if (eq this.sceneType "combat")}}
                                    <i class="fas fa-crossed-swords"></i>
                                    {{else if (eq this.sceneType "social")}}
                                    <i class="fas fa-comments"></i>
                                    {{else if (eq this.sceneType "rest")}}
                                    <i class="fas fa-bed"></i>
                                    {{/if}}
                                    {{this.sceneTypeLabel}}
                                </span>
                                <span class="scene-timestamp">{{this.timestamp}}</span>
                                {{#if this.isManual}}
                                <span class="scene-manual-indicator" title="{{this.manualLabel}}">
                                    <i class="fas fa-hand-pointer"></i>
                                    {{this.manualLabel}}
                                </span>
                                {{/if}}
                            </div>
                            <div class="scene-break-line"></div>
                        </div>
                        {{else}}
                        {{!-- Regular Transcript Segment --}}
                        <div class="transcript-segment" data-speaker="{{this.speaker}}" data-timestamp="{{this.timestamp}}">
                            <div class="segment-header">
                                <span class="speaker-label">{{this.speaker}}</span>
                                <span class="transcript-timestamp">{{this.timestamp}}</span>
                            </div>
                            <div class="transcript-text">{{this.text}}</div>
                        </div>
                        {{/if}}
                    {{/each}}
                </div>
                {{else}}
                <div class="empty-state">
                    <i class="fas fa-file-text"></i>
                    <p>{{i18n.noTranscript}}</p>
                </div>
                {{/if}}
            </div>
        </div>
    </section>
</div>
