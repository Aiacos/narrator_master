{{!-- Narrator Master - DM Panel Template --}}
{{!-- Interactive narrative assistant panel --}}

<div class="narrator-panel-container" data-module-id="{{moduleId}}">
    {{!-- Configuration Warning --}}
    {{#unless apiKeyConfigured}}
    <div class="narrator-config-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <span>{{i18n.noApiKey}}</span>
        <button type="button" class="open-settings">
            <i class="fas fa-cog"></i>
            {{i18n.configureSettings}}
        </button>
    </div>
    {{/unless}}

    {{!-- Loading Overlay --}}
    {{#if isLoading}}
    <div class="narrator-loading-overlay">
        <i class="fas fa-spinner fa-spin"></i>
        <span>{{loadingMessage}}</span>
    </div>
    {{/if}}

    {{!-- Recording Controls - Compact Toggle --}}
    <section class="narrator-recording-section">
        <div class="recording-controls">
            {{#if isInactive}}
            <button type="button" class="start-recording {{#unless apiKeyConfigured}}disabled{{/unless}}"
                    {{#unless apiKeyConfigured}}disabled{{/unless}}
                    title="{{i18n.startRecording}}">
                <i class="fas fa-microphone"></i>
                {{i18n.startRecording}}
            </button>
            {{/if}}

            {{#if isRecording}}
            <button type="button" class="pause-recording" title="{{i18n.pauseRecording}}">
                <i class="fas fa-pause"></i>
                {{i18n.pauseRecording}}
            </button>
            <button type="button" class="stop-recording" title="{{i18n.stopRecording}}">
                <i class="fas fa-stop"></i>
                {{i18n.stopRecording}}
            </button>
            {{/if}}

            {{#if isPaused}}
            <button type="button" class="resume-recording" title="{{i18n.resumeRecording}}">
                <i class="fas fa-play"></i>
                {{i18n.resumeRecording}}
            </button>
            <button type="button" class="stop-recording" title="{{i18n.stopRecording}}">
                <i class="fas fa-stop"></i>
                {{i18n.stopRecording}}
            </button>
            {{/if}}

            {{#if isProcessing}}
            <div class="processing-indicator">
                <i class="fas fa-spinner fa-spin"></i>
                <span>{{i18n.processing}}</span>
            </div>
            {{/if}}
        </div>

        {{!-- Recording Status --}}
        {{#unless isInactive}}
        <div class="recording-status">
            <span class="recording-indicator {{#if isRecording}}active{{/if}} {{#if isPaused}}paused{{/if}}">
                <i class="fas fa-circle"></i>
            </span>
            <span class="recording-duration">{{recordingDuration}}</span>
            {{#if isRecording}}
            <span class="listening-label">{{i18n.listeningStatus}}</span>
            {{/if}}
        </div>

        {{!-- Audio Level Indicator --}}
        <div class="audio-level-container">
            <div class="audio-level-bar" style="width: {{audioLevel}}%"></div>
        </div>
        {{/unless}}
    </section>

    {{!-- Journal Status --}}
    <div class="narrator-journal-status">
        <i class="fas fa-book"></i>
        <span>{{journalStatusText}}</span>
    </div>

    {{!-- Tab Navigation --}}
    <nav class="tabs" data-group="primary">
        <a class="item" data-tab="assistant">
            <i class="fas fa-lightbulb"></i>
            {{i18n.assistantTab}}
            {{#if offTrack}}
            <span class="off-track-badge" title="{{i18n.offTrackWarning}}">!</span>
            {{/if}}
        </a>
        <a class="item" data-tab="images">
            <i class="fas fa-images"></i>
            {{i18n.imagesTab}}
            {{#if hasImages}}
            <span class="count-badge">{{generatedImages.length}}</span>
            {{/if}}
        </a>
    </nav>

    {{!-- Tab Content --}}
    <section class="tab-content">
        {{!-- Assistant Tab --}}
        <div class="tab" data-tab="assistant" data-group="primary">
            <div class="suggestions-header">
                <h3>{{i18n.assistantTab}}</h3>
                <div class="suggestions-actions">
                    {{#if hasSuggestions}}
                    <button type="button" class="copy-suggestions" title="{{i18n.copyToClipboard}}">
                        <i class="fas fa-copy"></i>
                    </button>
                    {{/if}}
                </div>
            </div>

            {{!-- Off-Track Warning --}}
            {{#if offTrack}}
            <div class="off-track-warning">
                <div class="off-track-header">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>{{i18n.offTrackWarning}}</span>
                </div>
                {{#if offTrackMessage}}
                <p class="off-track-message">{{offTrackMessage}}</p>
                {{/if}}

                {{!-- Narrative Bridge --}}
                {{#if hasNarrativeBridge}}
                <div class="narrative-bridge">
                    <h4>{{i18n.returnToStory}}</h4>
                    <div class="narrative-bridge-content">
                        {{narrativeBridge}}
                    </div>
                    <button type="button" class="copy-bridge" title="{{i18n.copyToClipboard}}">
                        <i class="fas fa-copy"></i>
                        {{i18n.copyToClipboard}}
                    </button>
                </div>
                {{/if}}
            </div>
            {{/if}}

            <div class="suggestions-content">
                {{#if hasSuggestions}}
                <ul class="suggestions-list">
                    {{#each suggestions}}
                    <li class="suggestion-item">
                        <i class="fas fa-comment-dots"></i>
                        <span>{{this}}</span>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <div class="empty-state">
                    <i class="fas fa-lightbulb"></i>
                    <p>{{i18n.noSuggestions}}</p>
                </div>
                {{/if}}
            </div>
        </div>

        {{!-- Images Tab --}}
        <div class="tab" data-tab="images" data-group="primary">
            <div class="images-header">
                <h3>{{i18n.imagesTab}}</h3>
                <div class="images-actions">
                    <button type="button" class="generate-image {{#unless apiKeyConfigured}}disabled{{/unless}}"
                            {{#unless apiKeyConfigured}}disabled{{/unless}}>
                        <i class="fas fa-magic"></i>
                        {{i18n.generateImage}}
                    </button>
                    {{#if hasImages}}
                    <button type="button" class="clear-images" title="{{i18n.clearImages}}">
                        <i class="fas fa-trash"></i>
                    </button>
                    {{/if}}
                </div>
            </div>

            {{!-- Gallery Controls --}}
            {{#if hasImages}}
            <div class="gallery-controls">
                <div class="gallery-filter-row">
                    <div class="filter-group">
                        <label for="gallery-filter">
                            <i class="fas fa-filter"></i>
                            {{i18n.filterLabel}}
                        </label>
                        <select id="gallery-filter" class="gallery-filter-select">
                            <option value="all">{{i18n.filterAll}}</option>
                            <option value="favorites">{{i18n.filterFavorites}}</option>
                            {{#if hasCategories}}
                            <optgroup label="{{i18n.filterByCategory}}">
                                {{#each imageCategories}}
                                <option value="category:{{this}}">{{this}}</option>
                                {{/each}}
                            </optgroup>
                            {{/if}}
                        </select>
                    </div>
                    <div class="search-group">
                        <label for="gallery-search">
                            <i class="fas fa-search"></i>
                        </label>
                        <input type="text"
                               id="gallery-search"
                               class="gallery-search-input"
                               placeholder="{{i18n.searchPlaceholder}}" />
                        <button type="button" class="clear-search" title="{{i18n.clearSearch}}">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{/if}}

            <div class="images-content">
                {{#if hasImages}}
                <div class="images-gallery">
                    {{#each generatedImages}}
                    <div class="image-item"
                         data-url="{{this.url}}"
                         data-index="{{@index}}"
                         data-favorite="{{this.isFavorite}}"
                         data-category="{{this.category}}"
                         data-tags="{{this.tagsString}}">
                        <img src="{{this.url}}" alt="{{this.prompt}}" loading="lazy" />

                        {{!-- Image Metadata Badges --}}
                        <div class="image-badges">
                            {{#if this.isFavorite}}
                            <span class="badge-favorite" title="{{i18n.favoriteImage}}">
                                <i class="fas fa-star"></i>
                            </span>
                            {{/if}}
                            {{#if this.category}}
                            <span class="badge-category" title="{{i18n.categoryLabel}}">
                                <i class="fas fa-tag"></i>
                                {{this.category}}
                            </span>
                            {{/if}}
                        </div>

                        {{!-- Image Tags --}}
                        {{#if this.tags}}
                        <div class="image-tags">
                            {{#each this.tags}}
                            <span class="image-tag">{{this}}</span>
                            {{/each}}
                        </div>
                        {{/if}}

                        {{!-- Image Overlay with Prompt --}}
                        <div class="image-overlay">
                            {{#if this.prompt}}
                            <span class="image-prompt" title="{{this.prompt}}">
                                {{this.prompt}}
                            </span>
                            {{/if}}
                        </div>

                        {{!-- Image Actions --}}
                        <div class="image-actions">
                            <button type="button"
                                    class="action-favorite {{#if this.isFavorite}}active{{/if}}"
                                    data-index="{{@index}}"
                                    title="{{i18n.toggleFavorite}}">
                                <i class="{{#if this.isFavorite}}fas{{else}}far{{/if}} fa-star"></i>
                            </button>
                            <button type="button"
                                    class="action-tag"
                                    data-index="{{@index}}"
                                    title="{{i18n.manageTags}}">
                                <i class="fas fa-tags"></i>
                            </button>
                            <button type="button"
                                    class="action-show"
                                    data-index="{{@index}}"
                                    title="{{i18n.showToPlayers}}">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button type="button"
                                    class="action-delete"
                                    data-index="{{@index}}"
                                    title="{{i18n.deleteImage}}">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="empty-state">
                    <i class="fas fa-image"></i>
                    <p>{{i18n.noImages}}</p>
                </div>
                {{/if}}
            </div>
        </div>
    </section>
</div>
